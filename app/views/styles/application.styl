// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

html, body, #site-container, .outer-page-container, .page-container, .flex, .flex-18, .home-page
  height 100%

html
  color #333
  font-family 'Open Sans', sans-serif
  font-size 14px

  .flex
    display flex

    for i in (1...6)
      .flex-{i}
        flex i

    .flex-18
      flex 18

    .left-sidebar
      border-right 1px solid rgba(0, 0, 0, .25);

      .menu
        ul

          li
            font-size 0.9em
            font-weight 400
            color #000

    .right-sidebar
      border-left 1px solid rgba(0, 0, 0, .25);

    .left-sidebar, .right-sidebar
      background #F1F2F4
      padding 20px

      .sidebar-header
        color #000
        padding-bottom 10px
        border-bottom 1px solid rgba(0, 0, 0, .25)

      ul
        margin 0
        padding 0

        li
          list-style-type none
          margin 15px 0
