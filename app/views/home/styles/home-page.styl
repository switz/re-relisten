@import 'nib'

.home-page
  //display flex

  .flex-list
    //display flex
    flex-direction column

    h3
      background #F8FAFC
      margin 0
      padding 30px 10px 10px 10px
      border-left none
      font-weight 500
      font-size 1em
      color #000
      border-bottom 1px solid rgba(0,0,0,.25)
      border-right 1px solid rgba(0,0,0,.10)

    ul
      margin 0
      padding 0
      border-right 1px solid #DDD
      height auto
      overflow-y auto

      li
        list-style-type none
        border-bottom 1px solid #ddd

        a
          color #545454
          height 40px
          line-height 40px
          padding 0 15px
          width auto
          display block
          text-decoration none
          overflow ellipsis
          font-size 14px


          .date
            font-size 1.3em

          .subtitle
            font-size 0.7em

          &:hover
            text-decoration none
            background #f5f5f5

          &.active
            background red
            color #FFF
